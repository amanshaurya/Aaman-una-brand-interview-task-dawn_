<script src="https://code.jquery.com/jquery-2.2.0.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
<style>
  .slider{ display:flex;
         overflow:hidden;}

/* Slider */

.slick-slide {
    margin: 0px 5px;
}

.slick-slide img {
    width: 100%;
}

.slick-slider
{
    position: relative;
    display: block;
    box-sizing: border-box;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
            user-select: none;
    -webkit-touch-callout: none;
    -khtml-user-select: none;
    -ms-touch-action: pan-y;
        touch-action: pan-y;
    -webkit-tap-highlight-color: transparent;
}
ul.slick-dots {
    list-style: none;
    padding: 20px;
    border-radius: 50%;
}
  li{
    padding:5px;
  }

  button {
    border-radius: 50%;
}
.slick-list
{
    position: relative;
    display: block;
    overflow: hidden;
    margin: 0;
    padding: 0;
}
.slick-list:focus
{
    outline: none;
}
.slick-list.dragging
{
    cursor: pointer;
    cursor: hand;
}

.slick-slider .slick-track,
.slick-slider .slick-list
{
    -webkit-transform: translate3d(0, 0, 0);
       -moz-transform: translate3d(0, 0, 0);
        -ms-transform: translate3d(0, 0, 0);
         -o-transform: translate3d(0, 0, 0);
            transform: translate3d(0, 0, 0);
  padding:10px 0;
}

.slick-track
{
    position: relative;
    top: 0;
    left: 0;
    display: block;
}
.slick-track:before,
.slick-track:after
{
    display: table;
    content: '';
}
.slick-track:after
{
    clear: both;
}
.slick-loading .slick-track
{
    visibility: hidden;
}
.slick-dots
{
    display: flex !important;
  justify-content:center;
}
.slick-slide
{
    display: none;
    float: left;
    height: 100%;
    min-height: 1px;
}
[dir='rtl'] .slick-slide
{
    float: right;
}
.slick-slide img
{
    display: block;
  border-radius:5px;
}
.slick-slide.slick-loading img
{
    display: none;
}
.slick-slide.dragging img
{
    pointer-events: none;
}
.slick-initialized .slick-slide
{
    display: block;
}
.slick-loading .slick-slide
{
    visibility: hidden;
}
.slick-vertical .slick-slide
{
    display: block;
    height: auto;
    border: 1px solid transparent;
}
.slick-arrow.slick-hidden {
    display: none;
}

.image-cont {
  position: relative;
width:100%;
}

  .above-image{
    position: absolute; 
    top:0px; 
    bottom:0px; width: 
    100%
    color:#fff;
    background:rgba(0,0,0,0.4);
    z-index:1;
    padding:20px;
    border-radius:5px;
  }
a{
color:#fff;
}
  a:hover{
color:#111;
}

.above-content{
border: 1px dotted #fff;
    width: 100%;
    height: 100%;
  border-radius:5px;
} 
.main-content {
    position: relative;
    padding: 22px;
    top: 100%;
    transform: translateY(-111%);
}
.above-content h3,p,a{
  color:#fff;
  z-index:9;
}
.decor-text {
    background: #D6AD60;
    padding: 2px 10px;
    font-size: 15px;
    border-radius: 5px;
}
</style>
<div class="container">
  <h2 class="text-left">{{ section.settings.title }}</h2>
  <span class="text-left" style="
    opacity: 0.5;">{{ section.settings.subtitle }}</span>
   <section class="collection-slider slider">
	{%- for block in section.blocks -%}
      <div class="slide image-cont"><img src="{{ block.settings.collection.featured_image | img_url: 'large' }}">
        <div class="above-image">
       <div class="above-content">
        <div class="main-content">
           <h3>{{ block.settings.collection-heading }}</h3>
        <p>{{ block.settings.start-from }} <span class="decor-text">{{ block.settings.decor-text }}</span> </p>
          <a href="{{ block.settings.shop-button-url }}">{{ block.settings.shop-button }}</a>
        </div>
       </div>
        </div>
      </div>
	  {%- endfor -%}
   </section>
</div>

{% schema %}
{
  "name": "Collection Slider",
  "tag": "section",
  "class": "section section-collection-list",
  "max_blocks": 15,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Collections",
      "label": "Title for your collection"
    },

      {
      "type": "text",
      "id": "subtitle",
      "default": "Explore some of our most popular collections",
      "label": "Sub Title for your collection"
    }

  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": "Collection Name",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        },
        {
          "type": "text",
          "id": "collection-heading",
          "default": "The Best We sold, The best we Show",
          "label": "Introduce your collection"
        },
        {
          "type": "text",
          "id": "start-from",
          "default": "Starting From",
          "label": "Let customers know we are budget friendly"
        },
         {
          "type": "text",
          "id": "decor-text",
          "default": "50$",
          "label": "Enter a Price"
        },
        {
          "type": "text",
          "id": "shop-button",
          "default": "Shop Now",
          "label": "Button text"
        },
         {
          "type": "url",
          "id": "shop-button-url",
          "label": "Button Url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Slider",
      "blocks": [
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        }
      ]
    }
  ]
}
{% endschema %}


<script>
  $(document).ready(function(){
    $('.collection-slider').slick({
        slidesToShow: 3,
        slidesToScroll: 1,
        autoplay: true,
        autoplaySpeed: 3000,
        arrows: false,
        dots: false,
        pauseOnHover: true,
        responsive: [{
            breakpoint: 768,
            settings: {
                slidesToShow: 3
            }
        }, {
            breakpoint: 480,
            settings: {
                slidesToShow: 1
            }
        }]
    });
});
</script>